[
  {
    "use_key_equivalents": true,
    "bindings": {
      "shift shift": "command_palette::Toggle",

      // Doc
      "cmd-i": "workspace::ToggleRightDock",
      "ctrl-t": "workspace::ToggleBottomDock",
      "cmd-j": null,

      // Pane
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",

      // menu
      "tab": "menu::SelectNext",
      "shift-tab": "menu::SelectPrevious"
    }
  },
  {
    "context": "GitPanel && ChangesList",
    "use_key_equivalents": true,
    "bindings": {
      "s": "git::ToggleStaged",
      "S": "git::StageAll",
      "U": "git::UnstageAll",
      "X": "git::RestoreFile"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "use_key_equivalents": true,
    "bindings": {
      "tab": "editor::ContextMenuNext",
      "shift-tab": "editor::ContextMenuPrevious"
    }
  },
  {
    "context": "VimControl && !menu || EmptyPane",
    "use_key_equivalents": true,
    "bindings": {
      "space d": "pane::CloseActiveItem",
      "space e e": "project_panel::ToggleFocus",
      "space f": "file_finder::Toggle",
      "space o": "file_finder::Toggle",
      "space w h": "pane::SplitLeft",
      "space w v": "pane::SplitRight",
      "space w l": "pane::SplitRight",
      "space w k": "pane::SplitUp",
      "space w j": "pane::SplitDown",
      "space g d": "git_panel::ToggleFocus"
    }
  },
  {
    "context": "VimControl && !menu",
    "use_key_equivalents": true,
    "bindings": {
      "g r": "editor::FindAllReferences",
      "g k": "editor::GoToTypeDefinition",
      "g i": "editor::GoToImplementation",
      "g d": "editor::GoToDefinition",
      "g f": "editor::OpenExcerpts",
      "] e": "editor::GoToDiagnostic",
      "[ e": "editor::GoToPreviousDiagnostic",
      "space g h s": "git::ToggleStaged"
    }
  },
  {
    "context": "Editor && edit_prediction",
    "bindings": {
      "alt-tab": null,
      "tab": null,
      "ctrl-;": "editor::AcceptEditPrediction"
    }
  },
  {
    "context": "!Terminal",
    "bindings": {
      "ctrl-c": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "a": "project_panel::NewFile",
      "d": "project_panel::Delete",
      "r": "project_panel::Rename"
    }
  }
]
